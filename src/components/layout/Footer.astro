---
import { menuLinks, siteConfig } from "@/site.config";

const year = new Date().getFullYear();
---

<footer
	class="mt-auto w-full border-t border-gray-800 pt-20 pb-4 text-center font-semibold text-text-tertiary"
>
	<div class="mx-auto flex max-w-7xl flex-col items-center justify-between gap-y-2 px-4 sm:px-8 sm:flex-row sm:text-xs">
		<div class="me-0 sm:me-4">
			&copy; {siteConfig.author}
			{year}.<span class="inline-block">&nbsp;ðŸš€&nbsp;{siteConfig.title}</span>
		</div>
		<nav
			aria-labelledby="footer_links"
			class="flex gap-x-2 sm:gap-x-0 sm:divide-x sm:divide-gray-500"
		>
			<p id="footer_links" class="sr-only">More on this site</p>
			{
				menuLinks.map((link) => (
					<a class="hover:text-global-text px-4 py-2 hover:underline sm:py-0" href={link.path}>
						{link.title}
					</a>
				))
			}
		</nav>
	</div>
</footer>
