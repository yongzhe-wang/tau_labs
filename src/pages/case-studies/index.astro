---
import PageLayout from "@/layouts/Base.astro";
---

<PageLayout meta={{ title: "Case Studies" }}>
	<section class="mx-auto max-w-7xl px-4 py-20 sm:px-8">
		<h1 class="mb-4 text-4xl font-bold text-text-primary">Case Studies</h1>
		<p class="mb-12 text-xl text-text-secondary leading-relaxed max-w-prose">
			From "Nice Story" to "Decision Proof". Real numbers, real outcomes.
		</p>
		
		<div class="space-y-12">
			<!-- Case Study 1 -->
			<div class="border-gray-800 overflow-hidden rounded-xl border bg-gray-900">
				<div class="p-8 md:p-12">
					<div class="text-accent mb-4 text-sm font-bold tracking-wider uppercase">Toy</div>
					<h2 class="mb-8 text-3xl font-bold text-text-primary">Voice-first educational toy</h2>
					
					<div class="grid grid-cols-1 gap-12 lg:grid-cols-3">
						<!-- Customer Context -->
						<div>
							<h3 class="mb-4 text-lg font-bold text-text-primary border-b border-gray-700 pb-2">Customer Context</h3>
							<dl class="space-y-4 text-sm">
								<div>
									<dt class="text-text-tertiary">Industry</dt>
									<dd class="text-text-primary font-medium">Consumer Electronics / Toys</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Target Volume</dt>
									<dd class="text-text-primary font-medium">50k units / year</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Key Risk</dt>
									<dd class="text-text-primary font-medium">Privacy (COPPA) & Battery Life</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Hard Constraints</dt>
									<dd class="text-text-secondary mt-1">
										<ul class="list-disc list-inside">
											<li>Target BOM: &lt; $20</li>
											<li>Latency: &lt; 1s</li>
											<li>Battery: 10h+ active</li>
											<li>Compliance: COPPA / GDPR-K</li>
										</ul>
									</dd>
								</div>
							</dl>
						</div>

						<!-- What Tau Labs Actually Built -->
						<div>
							<h3 class="mb-4 text-lg font-bold text-text-primary border-b border-gray-700 pb-2">What Tau Labs Built</h3>
							<dl class="space-y-4 text-sm">
								<div>
									<dt class="text-text-tertiary">Board</dt>
									<dd class="text-text-primary font-medium">Custom PCB w/ Low-power ARM SoC</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Stack</dt>
									<dd class="text-text-primary font-medium">Hybrid Voice (Local Wake + Cloud Offload)</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Factory Changes</dt>
									<dd class="text-text-primary font-medium">Implemented secure key injection station</dd>
								</div>
							</dl>
						</div>

						<!-- Outcome -->
						<div>
							<h3 class="mb-4 text-lg font-bold text-text-primary border-b border-gray-700 pb-2">Outcome</h3>
							<dl class="space-y-4 text-sm">
								<div>
									<dt class="text-text-tertiary">BOM Cost</dt>
									<dd class="text-accent font-bold text-lg">Reduced from $22 â†’ $15</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">First-pass Yield</dt>
									<dd class="text-text-primary font-bold">96%</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Latency</dt>
									<dd class="text-text-primary font-bold">30ms (local)</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Battery Life</dt>
									<dd class="text-text-primary font-bold">12+ hours active</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Time to Pilot</dt>
									<dd class="text-text-primary font-bold">32 days</dd>
								</div>
							</dl>
						</div>
					</div>
				</div>
			</div>

			<!-- Case Study 2 -->
			<div class="border-gray-800 overflow-hidden rounded-xl border bg-gray-900">
				<div class="p-8 md:p-12">
					<div class="text-accent mb-4 text-sm font-bold tracking-wider uppercase">Smart Home</div>
					<h2 class="mb-8 text-3xl font-bold text-text-primary">Voice-Controlled Home Assistant</h2>
					
					<div class="grid grid-cols-1 gap-12 lg:grid-cols-3">
						<!-- Customer Context -->
						<div>
							<h3 class="mb-4 text-lg font-bold text-text-primary border-b border-gray-700 pb-2">Customer Context</h3>
							<dl class="space-y-4 text-sm">
								<div>
									<dt class="text-text-tertiary">Industry</dt>
									<dd class="text-text-primary font-medium">Smart Home / IoT</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Target Volume</dt>
									<dd class="text-text-primary font-medium">10k units (Initial Batch)</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Key Risk</dt>
									<dd class="text-text-primary font-medium">Cost & Connectivity Reliability</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Hard Constraints</dt>
									<dd class="text-text-secondary mt-1">
										<ul class="list-disc list-inside">
											<li>Target BOM: &lt; $18</li>
											<li>Latency: &lt; 500ms</li>
											<li>Battery: Mains powered (backup only)</li>
											<li>Compliance: FCC / CE</li>
										</ul>
									</dd>
								</div>
							</dl>
						</div>

						<!-- What Tau Labs Actually Built -->
						<div>
							<h3 class="mb-4 text-lg font-bold text-text-primary border-b border-gray-700 pb-2">What Tau Labs Built</h3>
							<dl class="space-y-4 text-sm">
								<div>
									<dt class="text-text-tertiary">Board</dt>
									<dd class="text-text-primary font-medium">Custom ESP32-S3 w/ Dual-Mic Array</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Stack</dt>
									<dd class="text-text-primary font-medium">Local Wake Word + GPT-4o via Websocket</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Factory Changes</dt>
									<dd class="text-text-primary font-medium">Automated audio testing rig</dd>
								</div>
							</dl>
						</div>

						<!-- Outcome -->
						<div>
							<h3 class="mb-4 text-lg font-bold text-text-primary border-b border-gray-700 pb-2">Outcome</h3>
							<dl class="space-y-4 text-sm">
								<div>
									<dt class="text-text-tertiary">BOM Cost</dt>
									<dd class="text-accent font-bold text-lg">$15.00</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">First-pass Yield</dt>
									<dd class="text-text-primary font-bold">98.5%</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Latency</dt>
									<dd class="text-text-primary font-bold">200ms (voice-to-text)</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Privacy</dt>
									<dd class="text-text-primary font-bold">100% Local Wake Word</dd>
								</div>
								<div>
									<dt class="text-text-tertiary">Time to Pilot</dt>
									<dd class="text-text-primary font-bold">45 days</dd>
								</div>
							</dl>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
</PageLayout>
